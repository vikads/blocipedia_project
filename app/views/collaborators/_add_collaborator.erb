<h3 id="add-collaborators">Add Collaborators</h3>

<% if @wiki.private? && policy(@wiki).destroy? %>

   <%=  form_for [wiki, Collaborator.new] do |f| %>
      <div class="form-group">
        <%= f.text_field :user, class: 'form-control', placeholder: 'Add Collaborators here, using their Emails.' %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
   <% end %>

<% end %>
