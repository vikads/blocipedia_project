<div class="conatiner">

  <div class="row heading">
    <div class="col-md-12">
      <h1>
        <%= markdown(@wiki.title) %> <br>
      </h1>
      <small>
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %> <br>
      <small>
    </div>
  </div>

  <div class="row-content">

    <div class="col-md-8">
      <h4>
        <p><%= markdown(@wiki.body) %></p>
      </h4>
      
      <div class="col-md-2">
        <%= link_to "edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      </div>

      <div class="col-md-2">
          <% if policy(@wiki).destroy? %>
              <%= link_to "delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you 100% sure you want to delete your wiki?"} %>
          <% end %>
      </div>


    </div>
  </div>

</div>
