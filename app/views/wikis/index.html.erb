<h1>Wikis</h1>

<div class="col-md-12">
  <%= link_to "New wiki", new_wiki_path, class: 'btn btn-success' %>
</div>

<div class= "row">
  <div class='col-md-12'>
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to markdown(wiki.title), wiki_path(wiki.id) %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
