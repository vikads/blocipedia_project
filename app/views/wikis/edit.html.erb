<div class="container">
  <div class="row heading">
    <div class="col-md-12">
      <h1>Edit Wiki</h1>
    </div>
  </div>

  <div class="row content">
      <div class="col-md-12 body">
        <%= form_for @wiki do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
          </div>

          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: 'Enter wiki body' %>

          </div>

          <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
  </div>

  <div class="row content">
      <div class="col-md-8 body">
          <%= render partial: 'collaborators/add_collaborator', locals: { wiki: @wiki } %>
          <%= render partial: 'collaborators/delete_collaborator', locals: { wiki: @wiki} %>
      </div>
  </div>


</div>
